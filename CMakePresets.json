{
        "version": 3,
        "cmakeMinimumRequired": {
                "major": 3,
                "minor": 22,
                "patch": 0
        },
        "configurePresets": [
                {
                        "name": "default-settings",
                        "hidden": true,
                        "binaryDir": "${sourceDir}/.build/${presetName}",
                        "cacheVariables": {
                                "CMAKE_BUILD_TYPE": {
                                        "type": "STRING",
                                        "value": "Release"
                                },
                                "MEM_METHOD": {
                                        "type": "STRING",
                                        "value": "STACK"
                                }
                        }
                },
                {
                        "name": "default",
                        "inherits": "default-settings"
                },
                {
                        "name": "win",
                        "hidden": true,
                        "condition": {
                                "type": "equals",
                                "lhs": "${hostSystemName}",
                                "rhs": "Windows"
                        },
                        "cacheVariables": {
                                "CMAKE_HOST_EXECUTABLE_SUFFIX": ".exe"
                        }
                },
                {
                        "name": "not-win",
                        "hidden": true,
                        "condition": {
                                "type": "not",
                                "condition": {
                                        "type": "equals",
                                        "lhs": "${hostSystemName}",
                                        "rhs": "Windows"
                                }
                        }
                },
                {
                        "name": "ninja-generator",
                        "hidden": true,
                        "generator": "Ninja Multi-Config"
                },
                {
                        "name": "makefile",
                        "inherits": [
                                "not-win",
                                "default-settings"
                        ]
                },
                {
                        "name": "MSVC-2022",
                        "generator": "Visual Studio 17 2022",
                        "inherits": [
                                "win",
                                "default-settings"
                        ],
                        "cacheVariables": {
                                "CMAKE_C_FLAGS_RELEASE": "/DNDEBUG /MD /O2 /Ob2 /Oi /Ot /Oy /fp:fast /GL",
                                "CMAKE_EXE_LINKER_FLAGS_RELEASE": "/LTCG"
                        }
                },
                {
                        "name": "ninja",
                        "inherits": [
                                "not-win",
                                "default-settings",
                                "ninja-generator"
                        ]
                },
                {
                        "name": "hifive-best",
                        "hidden": true,
                        "inherits": [
                                "default-settings",
                                "ninja-generator"
                        ],
                        "cacheVariables": {
                                "CMAKE_C_FLAGS": {
                                        "type": "STRING",
                                        "value": "-mcpu=sifive-u74 -mstrict-align -malign-data=natural -fno-common -ffast-math"
                                },
                                "CMAKE_C_FLAGS_RELEASE": {
                                        "type": "STRING",
                                        "value": "-O3 -DNDEBUG -funroll-loops -finline-functions -finline-functions-called-once -fomit-frame-pointer -foptimize-sibling-calls -falign-functions=16 -falign-jumps=16 -fgcse-las -fgcse-sm -fpeel-loops -fsched-spec-load --param inline-min-speedup=4 --param max-inline-insns-auto=18 --param max-inline-insns-single=450"
                                }
                        }
                },
                {
                        "name": "hifive",
                        "displayName": "HiFive native",
                        "inherits": [
                                "hifive-best",
                                "not-win"
                        ]
                },
                {
                        "name": "cross-riscv-linux",
                        "hidden": true,
                        "inherits": "hifive-best",
                        "toolchainFile": "riscv/toolchain-riscv-linux.cmake"
                },
                {
                        "name": "cross-riscv-linux-gcc-7.1.1",
                        "hidden": true,
                        "inherits": [
                                "cross-riscv-linux"
                        ],
                        "cacheVariables": {
                                "CMAKE_C_FLAGS": {
                                        "type": "STRING",
                                        "value": "-march=rv64imafdc -mabi=lp64d -mstrict-align -fno-common -ffast-math"
                                },
                                "CMAKE_EXE_LINKER_FLAGS": {
                                        "type": "STRING",
                                        "value": "-static -lpthread"
                                }
                        }
                }
        ],
        "buildPresets": [
                {
                        "name": "default",
                        "configurePreset": "default",
                        "configuration": "Release"
                },
                {
                        "name": "makefile",
                        "configurePreset": "makefile"
                },
                {
                        "name": "ninja",
                        "configurePreset": "ninja",
                        "configuration": "Release"
                },
                {
                        "name": "hifive",
                        "configurePreset": "hifive",
                        "inherits": "ninja"
                },
                {
                        "name": "MSVC-2022",
                        "configurePreset": "MSVC-2022",
                        "configuration": "Release"
                }
        ],
        "testPresets": [
                {
                        "name": "makefile",
                        "configurePreset": "makefile",
                        "output": {
                                "verbosity": "verbose"
                        },
                        "configuration": "Release"
                },
                {
                        "name": "ninja",
                        "configurePreset": "ninja",
                        "inherits": "makefile"
                },
                {
                        "name": "MSVC-2022",
                        "configurePreset": "MSVC-2022",
                        "configuration": "Release"
                }
        ]
}